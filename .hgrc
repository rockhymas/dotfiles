[ui]
editor = vim

[diff]
git = true

[alias]
l = pull
p = push
a = addremove -s 100
nudge = push --rev .
nout = out --rev .
latesttag = tip --template "{latesttag}\n"

[extensions]
mq=
patchbomb=
convert=
bookmarks=
purge=
rebase=
progress=
transplant=
color=
prompt=~/bin/prompt.py
hg_remotebranches=~/bin/hg_remotebranches.py

[bookmarks]
track.current = True

[remotebranches]
alias.default = True
